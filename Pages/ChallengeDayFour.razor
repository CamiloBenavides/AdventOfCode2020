@page "/challengedayfour"
@inject HttpClient _client


<h3 class="text-center">--- Day 4: Passport Processing ---</h3>

<div class="container">
    <div class="row">
        <div class="col-sm-7">
            <div class="form-group-sm">
                <blockquote class="blockquote text-center">
                    <p class="mb-0">Input</p>
                </blockquote>
                <textarea rows="30" @bind="_loadedFile" class="form-control"></textarea>
            </div>
        </div>
        <div class="col-sm-5">
            <br />
            <div class="row">
                <button type="button" @onclick="@(async () => await ShowResults())" class="btn btn-success">Run</button>
            </div>
            <br />
            <ResultsDayFour @ref="childOne" Result="@partOne" ResultNumber="1"></ResultsDayFour>
            <ResultsDayFour @ref="childTwo" Result="@partTwo" ResultNumber="2"></ResultsDayFour>
            @if (invalid)
            {
                <div class="alert alert-danger">
                    <strong>Check out!</strong> Input data is not valid.
                </div>
            }

        </div>

    </div>
</div>
<br />
<br />
